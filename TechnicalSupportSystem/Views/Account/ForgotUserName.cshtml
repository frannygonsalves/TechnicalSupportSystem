@model TechnicalSupportSystemV2.Models.ForgotUserNameModel

@{
    ViewBag.Title = "ForgotUserName";
}

<h2>Forgot User Name</h2>

@using (Html.BeginForm("ForgotUserNameEmail","Account",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.EmailAddress, new { @class = "col-md-2 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(model => model.EmailAddress, new{@class="form-control"})
                @Html.ValidationMessageFor(model => model.EmailAddress)
            </div>
        </div>
        

        <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Get Username" />
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
